<UserControl x:Class="CalcWpf.CalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CalcWpf"
             mc:Ignorable="d"
             d:DesignHeight="565" d:DesignWidth="350">
    <Grid Background="#222" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,10,0">
            <TextBlock Text="Standard" FontSize="22" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>
        <!-- Display -->
        <Border Grid.Row="1" Margin="10,10,10,10" BorderBrush="White" BorderThickness="2" CornerRadius="4">
            <TextBlock Text="{Binding DisplayValue.Display}" FontSize="48" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="10,0,10,0" Height="70"/>
        </Border>
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Memory row -->
            <Button Grid.Row="0" Grid.Column="0" Content="MC" Command="{Binding ExecuteCommand}" CommandParameter="MemoryClear" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="MR" Command="{Binding ExecuteCommand}" CommandParameter="MemoryRecall" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="M+" Command="{Binding ExecuteCommand}" CommandParameter="MemoryAdd" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="M-" Command="{Binding ExecuteCommand}" CommandParameter="MemorySubtract" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="1" Grid.ColumnSpan="4" Grid.Column="0" Content="MS" Command="{Binding ExecuteCommand}" CommandParameter="MemoryStore" Style="{StaticResource CalcButtonStyle}"/>
            <!-- Row 1 -->
            <Button Grid.Row="2" Grid.Column="0" Content="%" Command="{Binding ExecuteCommand}" CommandParameter="Percent" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="CE" Command="{Binding ExecuteCommand}" CommandParameter="ClearEntry" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="C" Command="{Binding ExecuteCommand}" CommandParameter="ClearAll" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="Back" Command="{Binding ExecuteCommand}" CommandParameter="Backspace" Style="{StaticResource CalcButtonStyle}"/>
            <!-- Row 2 -->
            <Button Grid.Row="3" Grid.Column="0" Content="1/x" Command="{Binding ExecuteCommand}" CommandParameter="Inverse" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="x^2" Command="{Binding ExecuteCommand}" CommandParameter="Square" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="sqrt" Command="{Binding ExecuteCommand}" CommandParameter="SquareRoot" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="3" Content="/" Command="{Binding ExecuteCommand}" CommandParameter="Divide" Style="{StaticResource CalcButtonStyle}"/>
            <!-- Row 3 -->
            <Button Grid.Row="4" Grid.Column="0" Content="7" Command="{Binding ExecuteCommand}" CommandParameter="Digit7" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="1" Content="8" Command="{Binding ExecuteCommand}" CommandParameter="Digit8" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="9" Command="{Binding ExecuteCommand}" CommandParameter="Digit9" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="3" Content="*" Command="{Binding ExecuteCommand}" CommandParameter="Multiply" Style="{StaticResource CalcButtonStyle}"/>
            <!-- Row 4 -->
            <Button Grid.Row="5" Grid.Column="0" Content="4" Command="{Binding ExecuteCommand}" CommandParameter="Digit4" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="5" Grid.Column="1" Content="5" Command="{Binding ExecuteCommand}" CommandParameter="Digit5" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="5" Grid.Column="2" Content="6" Command="{Binding ExecuteCommand}" CommandParameter="Digit6" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="5" Grid.Column="3" Content="-" Command="{Binding ExecuteCommand}" CommandParameter="Minus" Style="{StaticResource CalcButtonStyle}"/>
            <!-- Row 5 -->
            <Button Grid.Row="6" Grid.Column="0" Content="1" Command="{Binding ExecuteCommand}" CommandParameter="Digit1" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="6" Grid.Column="1" Content="2" Command="{Binding ExecuteCommand}" CommandParameter="Digit2" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="6" Grid.Column="2" Content="3" Command="{Binding ExecuteCommand}" CommandParameter="Digit3" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="6" Grid.Column="3" Content="+" Command="{Binding ExecuteCommand}" CommandParameter="Plus" Style="{StaticResource CalcButtonStyle}"/>
            <!-- Row 6 -->
            <Button Grid.Row="7" Grid.Column="0" Content="+/-" Command="{Binding ExecuteCommand}" CommandParameter="PlusMinus" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="7" Grid.Column="1" Content="0" Command="{Binding ExecuteCommand}" CommandParameter="Digit0" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="7" Grid.Column="2" Content="." Command="{Binding ExecuteCommand}" CommandParameter="DecimalPoint" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="7" Grid.Column="3" Content="=" Command="{Binding ExecuteCommand}" CommandParameter="Equal" Style="{StaticResource CalcButtonStyle}" Background="#3af" Foreground="Black"/>
        </Grid>
    </Grid>
</UserControl>
